{
  "id": "${artifactId}-${version}",
  "name": "Share Index Module",
  "provides": [
    {
      "id": "_tenant",
      "version": "2.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/_/tenant"
        },
        {
          "methods": [
            "GET",
            "DELETE"
          ],
          "pathPattern": "/_/tenant/{id}"
        }
      ]
    },
    {
      "id": "shared-index",
      "version": "1.0",
      "handlers": [
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/reshare-index/shared-titles",
          "permissionsRequired": [
            "reshare-index.collection.get"
          ]
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/reshare-index/shared-titles",
          "permissionsRequired": [
            "reshare-index.item.put"
          ]
        }
      ]
    }
  ],
  "requires": [],
  "permissionSets": [
    {
      "permissionName": "reshare-index.collection.get",
      "displayName": "reshare - get titles",
      "description": "lookup reshare titles"
    },
    {
      "permissionName": "reshare-index.collection.item.put",
      "displayName": "reshare - upsert title",
      "description": "update or insert reshare title"
    },
    {
      "permissionName": "reshare-index.all",
      "displayName": "reshare - all permissions",
      "description": "create, update, retrieve and delete shared titles",
      "subPermissions": [
        "reshare-index.collection.get",
        "reshare-index.item.put"
      ]
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 536870912,
        "PortBindings": {
          "8081/tcp": [
            {
              "HostPort": "%p"
            }
          ]
        }
      }
    },
    "env": [
      {
        "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=66.0"
      },
      {
        "name": "DB_HOST",
        "value": "postgres"
      },
      {
        "name": "DB_PORT",
        "value": "5432"
      },
      {
        "name": "DB_USERNAME",
        "value": "folio_admin"
      },
      {
        "name": "DB_PASSWORD",
        "value": "folio_admin"
      },
      {
        "name": "DB_DATABASE",
        "value": "okapi_modules"
      },
      {
        "name": "DB_QUERYTIMEOUT",
        "value": "60000"
      },
      {
        "name": "DB_CHARSET",
        "value": "UTF-8"
      },
      {
        "name": "DB_MAXPOOLSIZE",
        "value": "5"
      }
    ]
  }
}
